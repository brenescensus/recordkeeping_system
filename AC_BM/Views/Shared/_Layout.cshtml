@{
    string username = User.Identity.Name;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AC_BM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AC_BM.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-info  border-bottom box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand text-danger fw-bolder" asp-area="" asp-controller="Home" asp-action="Index">
                    AC IMMIGRATION </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light  " asp-area="" asp-controller="UserAunthentication" asp-action="Registration">SignUp</a>
                        </li>
                       
                        @if (User.IsInRole("Admin"))
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Company" asp-action="Add"> @*href="/Company/Add"*@ Company</a></li>
                                    <li><a class="dropdown-item" @*asp-controller="Service" asp-action="Add"*@ href="/Service/Add">Service</a></li>
                                    <li><a class="dropdown-item"@* asp-area="" asp-controller="" asp-action=""*@ href="/Transaction/Add">Transaction</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" @*asp-controller="UserAunthentication" asp-action="Logout"*@ href="/UserAunthentication/Logout/">Logout</a></li>
                                </ul>
                            </li>
                         @* <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Transaction" asp-action="">Bills</a>
                            </li>
                             <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Company" asp-action="Add">Company</a>
                            </li>
                             <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Service" asp-action="Add">Service</a>
                            </li>*@
                        }
                   
                            
                                         @if (!string.IsNullOrEmpty(username))
                        {
                        <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="UserAunthentication" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            
        </nav>
    </header>
   
  <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
           <p> &copy; 2022 - All rights Reserved- <a asp-area="" asp-controller="Home" asp-action="Index"></a></p>
        <div class="icon">
            <a href=""><i class="bi bi-linkedin" aria-hidden="true"></i> </a>
            <a href=""><i class="bi bi-twitter" aria-hidden="true"></i></a>
            <a href=""><i class="bi bi-facebook"></i></a>
            <a href=""><i class="bi bi-github" aria-hidden="true"></i></a>
                <a href=""><i class="bi bi-envelope" aria-hidden="true"></i></a>

            </a>

        </div>
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
 