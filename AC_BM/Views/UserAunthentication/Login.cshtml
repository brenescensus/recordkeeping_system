@model AC_BM.Models.DTO.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="">
    <div class="logo d-flex justify-content-center flex-column">
        <img src="~/Images/AC_Logo.jpg" />
        <p>Heading goes here S...</p>
    </div>

    <form method="post"  asp-action="Login" asp-controller="UserAunthentication">
        <div class="form-group">
            <input asp-for="Username" class="form-control" type="text" placeholder="UserName" />
            <ion-icon name="person-outline"></ion-icon>
            <span class="text-danger pt-1 font-monospace fw-normal" asp-validation-for="Username"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
            <ion-icon name="lock-closed-outline"></ion-icon>
            <span class="text-danger font-monospace fw-normal pt-1" asp-validation-for="Password"></span>
        </div>

        <div class="remember mb-3">
            <label> <input  type="checkbox" /> Remember Me</label>
            <a href="#">Forgot Password?</a>
        </div>
        <button type="submit" class="btn primary w-100">Sign In</button>
        <p class="noAcc">Don’t have account ? <a asp-action="Registration"> Register as new member</a></p>
    </form>

</div>

