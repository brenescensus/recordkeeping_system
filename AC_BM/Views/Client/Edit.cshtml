@model AC_BM.Models.ViewModels.ClientVM
@{
    ViewData["Title"] = "Add Client";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


@*<div class="row border g-0 rounded shadow-sm bg-white">
*@
<form class="p-3" method="post" enctype="multipart/form-data" asp-action="Edit" asp-controller="Client">
    <div class="row p-2">
        @*     <div class="col">*@
        <div class="form-group  col-md-6">
            <label for="fullname">FullName</label>
            <input asp-for="FullName" type="text" class="form-control" placeholder="fullname">
            <span class="text-danger pt-1 font-monospace fw-normal" asp-validation-for="FullName"></span>

        </div>
        <div class="form-group col-md-6">
            <label asp-for="Email">Email</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Email">
            <span class="text-danger pt-1 font-monospace fw-normal" asp-validation-for="Email"></span>

        </div>
    </div>

    <div class="form-group p-2">
        <label for="Contact">Contact</label>
        <input type="tel" asp-for="Contact" class="form-control" placeholder="Telephone number">
        <span class="text-danger pt-1 font-monospace fw-normal" asp-validation-for="Contact"></span>

    </div>
    <div class="form-group p-2">
        <label for="Id/Passport">Id/Passport</label>
        <input type="tel" asp-for="Id_Passport" class="form-control" placeholder="Identification number">
        <span class="text-danger pt-1 font-monospace fw-normal" asp-validation-for="Id_Passport"></span>

    </div>
    @*  </div>*@

    <div class="row p-2">
        <div class="form-group col-md-6">
            <label for="number">Nationality </label>
            <select class="form-select" asp-items="Model.CountriesSelectList" asp-for="Nationality">
                <option selected>Open this select menu</option>
                <option disabled selected>---select country---</option>
            </select>
        </div>

        <div class="form-group p-2 col-md-6">
            <label for="number">Type of service </label>
            <select class="form-select" asp-items="Model.ServiceSelectList" asp-for="Service">
                <option selected>Open this select menu</option>
                <option disabled selected>---select service---</option>

            </select>
        </div>

    </div>
    <div class="form-group p-2 ">
        <label>Document(Attach all the relevant documents) </label>
        <input type="file" asp asp-for="DocFiles" multiple>

    </div>

    <div class="d-flex justify-content-end pe-3">
        <button type="submit" class="btn btn-md btn-primary" asp-action="Edit" asp-controller="Client">Update</button>
    </div>
</form>
