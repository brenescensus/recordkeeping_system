@model AC_BM.Models.Domain.User;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <meta name="viewport" content="width=device-width" />

    
  <div class="wrapper">
                <div class="title">Client Form</div>
           
          <div method="post" enctype="multipart/form-data">
            
                    <div class="input_field">
                        <label asp-for="Name">Full Name</label>
                        <input asp-for="Name" class="input" type="text" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="input_field">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="input" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input_field">
                        <label asp-for="Contact" ></label>
                        <input asp-for="Contact" class="input" type="number"/>
                        <span asp-validation-for="Contact" class="text-danger"></span>
                    </div>
                    <div class="input_field">
                        <label asp-for="Id_Passport">Id/Passport</label>
                        <input asp-for="Id_Passport" class="input" type="number" />
                        <span asp-validation-for="Id_Passport" class="text-danger"></span>
                    </div>
                <div class=" form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="input" type="text" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="input_field">
                    <label asp-for="Nationality"></label>
                    <input asp-for="Nationality" class="input" type="text" />
                    <span asp-validation-for="Nationality" class="text-danger"></span>
                </div>
                <div class="input_field">
                        <label asp-for="Dependence"></label>
                        <input asp-for="Dependence" class="input" type="text" />
                        <span asp-validation-for="Dependence" class="text-danger"></span>
                    </div>
                    <div class"input_field">
                        <label asp-for="DocFile">Attach File</label>
                        <input asp-for="DocFile" clas="input" type="file" />
                    </div>



                   @if(TempData["msg"]!=null){
                   <div class="text-success">
                     @TempData["msg"]
                   </div>
                                               }
                   <a class="btn btn-primary" type="submit" asp-controller="Client" asp-action="Add"> &nbsp;Add Details </a>
                  @*<a asp-action="Display" asp-controller="Dashboard" class="btn btn-danger" >Back</a>*@

             </div>
         </div>
        
    @section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }

}
